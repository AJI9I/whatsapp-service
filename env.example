# Spring Boot API URL (можно изменить через веб-интерфейс)
API_URL=http://localhost:8080

# API Endpoint для отправки сообщений (можно изменить через веб-интерфейс)
API_ENDPOINT=/api/webhook/whatsapp

# API ключ для авторизации (опционально, можно изменить через веб-интерфейс)
# API_KEY=your-secret-api-key-here

# Путь для сохранения сессии WhatsApp
SESSION_PATH=./.wwebjs_auth

# Порт веб-интерфейса
WEB_PORT=3000

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Количество попыток retry при ошибке отправки на API
RETRY_ATTEMPTS=3

# Задержка между попытками retry (в миллисекундах)
RETRY_DELAY=5000

# Ollama URL для парсинга сообщений (опционально)
OLLAMA_URL=http://localhost:11434

# Ollama модель для парсинга сообщений (опционально)
# Если не указана, используется mistral
# Доступные модели: mistral, deepseek-r1:8b-custom, gpt-oss:20b, llama3.2 и др.
OLLAMA_MODEL=gpt-oss:20b

# Ollama размер контекста (num_ctx) - количество токенов для контекста
# По умолчанию: 16384 токенов (увеличено для длинных прайс-листов)
# Для увеличения контекста установите большее значение (например, 32768)
# ВНИМАНИЕ: Увеличение контекста требует больше памяти и может замедлить обработку
OLLAMA_NUM_CTX=16384

# Ollama количество токенов для генерации (num_predict) - максимальная длина ответа
# По умолчанию: 8192 токенов (увеличено для больших прайс-листов с множеством товаров)
# Для более длинных ответов установите большее значение (например, 16384)
OLLAMA_NUM_PREDICT=8192

# Ollama таймаут запросов (в миллисекундах)
# По умолчанию: 180000 мс (180 секунд, 3 минуты)
OLLAMA_TIMEOUT=180000

# Ollama таймаут для запроса информации о модели (в миллисекундах)
# По умолчанию: 30000 мс (30 секунд)
OLLAMA_MODEL_INFO_TIMEOUT=30000

# Ollama настройки GPU (опционально)
# num_gpu: количество GPU для использования
# -1 = автоматически использовать все доступные GPU (рекомендуется)
# 0 = отключить GPU, использовать только CPU
# 1 = использовать только первую GPU
# 2 = использовать первые 2 GPU (если доступно)
# По умолчанию: -1 (автоматически)
# ОБЯЗАТЕЛЬНО: Убедитесь, что установлены драйверы NVIDIA и CUDA Toolkit для работы с GPU
# Проверить наличие GPU: nvidia-smi
OLLAMA_NUM_GPU=-1

# Примечание: Группы и личные чаты для мониторинга настраиваются через веб-интерфейс

